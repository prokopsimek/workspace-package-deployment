{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports":true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "files": [],
  "include": [],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "./packages/prokopsimek-package-core" },
    { "path": "./packages/prokopsimek-package-a" },
    { "path": "./packages/prokopsimek-package-b" }
  ]
}
